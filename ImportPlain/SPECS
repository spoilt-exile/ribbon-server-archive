Налаштування які доступні для модулю ImportPlain

import_* (основні налаштування імпорту);
     type {String} (!) (тип модулю імпорту, вказує на необхідний для роботи модуль);
     name {String} (!) (ім’я схеми імпорту повідомлень);
     print {String} (унікальний ідентифікатор схеми імпорту, при створенні заповнюється системою);
     timeout {Integer} (!) (перерва для перевірок на предмет нових повідомлень у хвилинах);
plain_* (налаштування модулю PLAIN);
     path {String} (!) (шлях к файлам для імпорту);
     mask {String} (!) (маска пошуку файлів; наприклад, *.txt);
     ignore_mask {String} (!) (маска для відсіку файлів: наприклад ???_сообщение.txt);
     dir {String} (!) (вказівник на напрямок на котрий будуть випускатися повідомлення);
     copyright_override {String} (вказівник на авторські права для нових повідомлень);
opt_* (опціональні налаштування);
     log {Boolean} (вказівник на журналювання імпорту нового повідомлення);